state_is=$(cat "$__object/explorer/state")
state_should="$(cat "$__object/parameter/state")"

[ "$state_is" = "$state_should" ] && exit 0

nameparam="$__object/parameter/name"
if [ -f "$nameparam" ]; then
    name=$(cat "$nameparam")
else
    name="$__object_id"
fi

pipparam="$__object/parameter/pip"
if [ -f "$pipparam" ]; then
    pip=$(cat "$pipparam")
else
    pip="pip"
fi

runasparam="$__object/parameter/runas"
if [ -f "$runasparam" ]
then
    runas=$(cat "$runasparam")
    has_sudo=$(cat "$__object/explorer/sudo")
    if [ "$has_sudo" = "yes" ]
    then
        runas_cmd="sudo"
    else
        has_su=$(cat "$__object/explorer/su")
        if [ "$has_su" = "yes" ]
        then
            runas_cmd="su"
        else
            runas_cmd=""
        fi
    fi
else
    runas_cmd=""
fi

case "$state_should" in
    present)
        if [ "$runas_cmd" = "sudo" ]
        then
            echo sudo -H -u $runas $pip install -q "$name"
        elif [ "$runas_cmd" = "su" ]
        then
            echo su $runas -c \"$pip install -q "$name"\"
        else
            echo $pip install -q "$name"
        fi
    ;;
    absent)
        if [ "$runas_cmd" = "sudo" ]
        then
            echo sudo -H -u $runas $pip uninstall -q -y "$name"
        elif [ "$runas_cmd" = "su" ]
        then
            echo su $runas -c \"$pip uninstall -q -y "$name"\"
        else
            echo $pip uninstall -q -y "$name"
        fi
    ;;
    *)
        echo "Unknown state: $state_should" >&2
        exit 1
    ;;
esac
